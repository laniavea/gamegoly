import { FieldData } from "./field_data.slint";
import { InfoPanelAdapter } from "./info_panel.slint";

export component FieldTile inherits Rectangle {
	in-out property <FieldData> field_data;

	in property <length> text_size;

	preferred-width: 64px;
	preferred-height: 64px;

	border-width: 2px;
	border-color: black;

	TouchArea {
		clicked => {
			additional_info.show();
			InfoPanelAdapter.is_tile_panel = true;
			InfoPanelAdapter.is_test_panel = false;
		}
	}

	background: field_data.fill_color;

	Text {
		width: parent.width;
		height: parent.height;
		text: parent.field_data.title;
		horizontal-alignment: center;
		vertical-alignment: center;
		font-size: text_size / 8;
		font-weight: 600;
		color: white;
		wrap: word-wrap;
		overflow: elide;
	}

	additional_info := PopupWindow {
		Rectangle {
			background: white;
			width: 100%;
			height: 100%;

			Text {
				padding: 100px;
				text: field_data.title;
			}
		}

		height: 2 * parent.height;
		width: parent.width;

		x: 0;
		y: 0;

	}
}
